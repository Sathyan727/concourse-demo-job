{
  "variables":{
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ssh_private_key" : "{{user `ssh_private_key`}}"
   },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0e58b56aa4d64231b",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
       "ssh_keypair_name": "mykpar",
      "ssh_private_key_file" : "/tmp/mykpar.pem",
      "ami_name":"packer-ansible-python-demo-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}"
    }
  ],
  "provisioners": [
{
      "type": "shell",
      "inline": [
        "echo {{user `ssh_private_key`}} | base64 -d > /tmp/temp-key.pem",
        "chmod 400 /tmp/temp-key.pem",
        "ANSIBLE_REMOTE_TMP=/tmp/.ansible/tmp /root/.local/bin/ansible-playbook -i 'localhost,' --connection=local -u {{user `ssh_username`}} /packer-source/project-code/playbook.yml",
        "rm -f /tmp/temp-key.pem"
      ]
    }
  ]
}
