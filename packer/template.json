{
  "variables":{
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ssh_private_key" : "{{user `ssh_private_key`}}"
   },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0e58b56aa4d64231b",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
       "ssh_keypair_name": "mykpar",
      "ssh_private_key_file" : "/tmp/mykpar.pem",
      "ami_name":"packer-ansible-python-demo-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}"
    }
  ],
  "provisioners": [
{
  "type": "shell",
  "inline": [
    "curl -O https://www.python.org/ftp/python/3.9.19/Python-3.9.19.tar.xz",
    "tar -xJf Python-3.9.19.tar.xz",
    "sudo mv Python-3.9.19 /opt/python3.9",
    "sudo ln -sf /opt/python3.9/python /usr/bin/python3"
  ],
  "execute_command": "sudo {{.Path}}"
},
{
  "type": "shell",
  "inline": [
    "/usr/bin/python3 --version"
  ]
},
    {
      "type": "ansible",
      "playbook_file": "project-code/packer/playbook.yml",
      "extra_arguments": [
        "-e ansible_remote_tmp=/tmp",
        "-e ansible_python_interpreter=/usr/bin/python3",
        "-vvv"
      ]
    }
  ]
}
