{
  "variables":{
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "ssh_private_key" : "{{user `ssh_private_key`}}"
   },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0e58b56aa4d64231b",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
       "ssh_keypair_name": "mykpar",
      "ssh_private_key_file" : "/tmp/mykpar.pem",
      "ami_name":"packer-ansible-python-demo-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}"
    }
  ],
  "provisioners": [
{
  "type": "shell",
  "inline": [
    "sudo yum groupinstall -y 'Development Tools'",
    "sudo yum install -y zlib-devel bzip2-devel openssl-devel ncurses-devel sqlite-devel readline-devel tk-devel gdbm-devel libffi-devel xz-devel",
    "curl -O https://www.python.org/ftp/python/3.9.19/Python-3.9.19.tar.xz",
    "tar -xJf Python-3.9.19.tar.xz",
    "cd Python-3.9.19",
    "./configure --enable-optimizations",
    "make -j$(nproc)",
    "sudo make altinstall",
    "sudo ln -sf /usr/local/bin/python3.9 /usr/bin/python3"
  ],
  "execute_command": "sudo {{.Path}}"
},
    {
      "type": "ansible",
      "playbook_file": "project-code/packer/playbook.yml",
      "extra_arguments": [
        "-e ansible_remote_tmp=/tmp",
        "-e ansible_python_interpreter=/usr/bin/python3",
        "-vvv"
      ]
    }
  ]
}
